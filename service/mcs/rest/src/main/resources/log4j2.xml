<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="mcsLoggerConfig"><Properties>
    <Property name="tomcatHome">.</Property>
    <Property name="logsDir">${sys:tomcatHome}/logs/</Property>
    <Property name="fileName">${logsDir}mcs.log</Property>
    <Property name="filePattern">${fileName}.%d{yyyy-MM-dd}</Property>
    <Property name="pattern">%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}{GMT} mcs [requestId=%X{requestId}] [%C] - %p : %m%n</Property>
</Properties>

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="${pattern}"/>
        </Appender>
        <Appender type="RollingFile" name="FILE" append="true" fileName="${fileName}" filePattern="${filePattern}">
            <Layout type="PatternLayout" pattern="${pattern}"/>
            <TimeBasedTriggeringPolicy/>
        </Appender>
        <Appender type="RollingFile" name="SwiftModifications" append="true"
          fileName="${sys:logsDir}swift-modifications.log" filePattern="${sys:logsDir}swift-modifications.log.%d{yyyy-MM}">
            <Layout type="PatternLayout"
              pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}{GMT};%X{swiftObjectOperation};%X{swiftObjectName}%n"/>
            <TimeBasedTriggeringPolicy/>
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="info">
            <!-- Log only to file <AppenderRef ref="STDOUT"/> -->
            <AppenderRef ref="FILE"/>
        </Root>
        <Logger name="eu.europeana.cloud.service.mcs" level="debug"/>
        <logger name="SwiftModifications" additivity="false" level="info">
            <AppenderRef ref="SwiftModifications"/>
        </logger>
    </Loggers>

</Configuration>