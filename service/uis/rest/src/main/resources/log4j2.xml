<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="uisLoggerConfig">
    <Properties>
      <Property name="tomcatHome">.</Property>
      <Property name="logsDir">${sys:tomcatHome}/logs/</Property>
      <Property name="fileName">${logsDir}uis.log</Property>
      <Property name="filePattern">${fileName}.%d{yyyy-MM-dd}</Property>
      <Property name="pattern">%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}{GMT} uis [requestId=%X{requestId}] [%C] - %p : %m%n</Property>
    </Properties>

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="${pattern}"/>
        </Appender>
        <Appender type="RollingFile" name="FILE" append="true" fileName="${fileName}" filePattern="${filePattern}">
            <Layout type="PatternLayout" pattern="${pattern}"/>
            <TimeBasedTriggeringPolicy/>
        </Appender>
    </Appenders>

    <Loggers>
        <Logger level="debug" name="eu.europeana.cloud.service"/>
        <Root level="info">
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>

</Configuration>