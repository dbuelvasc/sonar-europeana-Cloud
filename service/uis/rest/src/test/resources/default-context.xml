<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
						">

    <context:annotation-config/>

    <bean id="dbService" class="eu.europeana.cloud.cassandra.CassandraConnectionProvider">
        <constructor-arg name="hosts" type="java.lang.String" value="localhost" />
        <constructor-arg name="port" type="int" value="#{ T(eu.europeana.cloud.test.CassandraTestInstance).getPort() }" />
        <constructor-arg name="keyspaceName" type="java.lang.String" value="uis_test4" />
        <constructor-arg name="userName" type="java.lang.String" value="" />
        <constructor-arg name="password" type="java.lang.String" value="" />
    </bean>

    <bean id="cassandraDataProviderService" class="eu.europeana.cloud.service.uis.service.CassandraDataProviderService" />
    <bean id="dataProviderDao" class="eu.europeana.cloud.service.uis.dao.CassandraDataProviderDAO">
        <constructor-arg name="dbService" ref="dbService" />
    </bean>

    <bean id="cloudIdLocalIdBatches" class="eu.europeana.cloud.service.uis.dao.CloudIdLocalIdBatches">
        <constructor-arg name="cloudIdDao" ref="cloudIdDao" />
        <constructor-arg name="localIdDao" ref="localIdDao" />
        <constructor-arg name="dbService" ref="dbService" />
    </bean>

    <bean id="service"
          class="eu.europeana.cloud.service.uis.service.UniqueIdentifierServiceImpl">
        <constructor-arg name="cloudIdDao" ref="cloudIdDao" />
        <constructor-arg name="localIdDao" ref="localIdDao" />
        <constructor-arg name="dataProviderDao" ref="dataProviderDao" />
        <constructor-arg name="cloudIdLocalIdBatches" ref="cloudIdLocalIdBatches" />
    </bean>
    <bean id="cloudIdDao" class="eu.europeana.cloud.service.uis.dao.CloudIdDAO">
        <constructor-arg name="dbService" ref="dbService" />
    </bean>
    <bean id="localIdDao" class="eu.europeana.cloud.service.uis.dao.LocalIdDAO">
        <constructor-arg name="dbService" ref="dbService" />
    </bean>
    <bean id="bucketsHandler" class="eu.europeana.cloud.service.commons.utils.BucketsHandler">
        <constructor-arg name="session" value="#{dbService.session}"/>
    </bean>
</beans>