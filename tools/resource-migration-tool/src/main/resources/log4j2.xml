<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="resourceMigratorLoggerConfig">
    <Properties>
        <Property name="fileName">logs/migration.log</Property>
        <Property name="filePattern">${sys:fileName}.%d{yyyy-MM-dd}</Property>
        <Property name="pattern">%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}{GMT} resource provider [%c] - %p : %m%n</Property>
    </Properties>

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="${pattern}"/>
        </Appender>
        <Appender type="RollingFile" name="FILE" append="true" fileName="${fileName}" filePattern="${filePattern}">
            <Layout type="PatternLayout" pattern="${pattern}"/>
            <TimeBasedTriggeringPolicy/>
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>

</Configuration>